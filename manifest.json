{
  "name": "Distill",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Distill Interview Scheduler",
  "homepage_url": "http://distill.cc",
  "icons": {
    "16": "app/img/icons/icon16.png",
    "48": "app/img/icons/icon48.png",
    "128": "app/img/icons/icon128.png"
  },
  "default_locale": "en",
  // "background": {
  //   "page": "index.html",
  //   "persistent": true
  // },
  "browser_action": {
    "default_icon": "app/img/icons/icon128.png",
    "default_title": "Distill Interview Generator",
    "default_popup": "index.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "http://*.distill.cc/",
    "https://*.distill.cc/",
    "http://localhost/",
    "http://0.0.0.0:3000/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' "
}
